@page "{id:int}"
@model SupplyChain.Frontend.Pages.EditInventoryModel
@{
    ViewData["Title"] = "Adjust Inventory";
}

<div class="row justify-content-center py-5">
    <div class="col-md-7">
        <div class="card border-0 shadow-lg glass-panel animate-enter">
            <div class="card-header bg-dark bg-gradient text-white py-3 border-0">
                <h3 class="card-title mb-0 fw-bold"><i class="bi bi-pencil-square me-2"></i> Adjust Stock Level</h3>
            </div>
            <div class="card-body p-4">
                <form method="post">
                    <input type="hidden" asp-for="Inventory.InventoryID" />

                    <div class="mb-4">
                        <label class="form-label fw-bold"><i class="bi bi-box-fill me-1 text-primary"></i> Product</label>
                        <select asp-for="Inventory.ProductID" asp-items="Model.ProductOptions" class="form-select border-2 shadow-sm" required>
                             <option value="">-- Select Product --</option>
                        </select>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold"><i class="bi bi-building me-1 text-info"></i> Warehouse Hub</label>
                        <select asp-for="Inventory.WarehouseID" asp-items="Model.WarehouseOptions" class="form-select border-2 shadow-sm" required>
                             <option value="">-- Select Hub --</option>
                        </select>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6 text-dark font-weight-bold">
                            <label class="form-label fw-bold text-dark"><i class="bi bi-hash me-1 text-success"></i> Quantity Available</label>
                            <input asp-for="Inventory.Quantity_Available" type="number" class="form-control border-2 shadow-sm" min="0" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold text-dark"><i class="bi bi-bell-fill me-1 text-warning"></i> Reorder Level</label>
                            <input asp-for="Inventory.Reorder_Level" type="number" class="form-control border-2 shadow-sm" min="0" />
                            <div class="form-text small">Alert trigger point for replenishment.</div>
                        </div>
                    </div>

                    <div class="d-flex gap-3 mt-5">
                        <button type="submit" class="btn btn-dark btn-lg px-5 shadow fw-bold">
                            <i class="bi bi-check-circle me-2"></i> Update Stock Record
                        </button>
                        <a href="/Inventory" class="btn btn-light btn-lg border px-4">
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
