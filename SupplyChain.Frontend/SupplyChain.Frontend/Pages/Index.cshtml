@page
@model SupplyChain.Frontend.Pages.IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="dashboard-header">
    <h1>System Dashboard</h1>
    <p class="text-muted">High-level overview of global supply chain operations and key metrics.</p>
</div>


<img src="/images/hero.png" alt="Supply Chain Global" class="hero-banner" />

<div class="dashboard-grid">
    
    <div class="stat-card">
        <h4>Product Catalog</h4>
        <div class="value">@Model.TotalProducts</div>
        <p style="font-size: 0.95rem; color: var(--text-muted); font-weight: 500;">Units registered</p>
    </div>

    
    <div class="stat-card">
        <h4>Customer Base</h4>
        <div class="value">@Model.TotalCustomers</div>
        <p style="font-size: 0.95rem; color: var(--text-muted); font-weight: 500;">Active global clients</p>
    </div>

    
    <div class="stat-card">
        <h4>Pending Orders</h4>
        <div class="value">12</div>
        <p style="font-size: 0.95rem; color: var(--text-muted); font-weight: 500;">Ready for processing</p>
    </div>
</div>

<div class="dashboard-info" style="display: flex; gap: 3rem; align-items: start;">
    <div style="flex: 1;">
        <h3>Operational Insights</h3>
        <p>This dashboard provides real-time visibility into your logistical network. Monitor stock levels, track purchase orders, and manage customer relations from a single, centralized interface designed for professional efficiency.</p>
        <div style="display: flex; gap: 1.5rem; margin-top: 2rem;">
            <a href="/Products" style="background: var(--primary); color: white; padding: 0.75rem 1.5rem; border-radius: 8px; text-decoration: none; font-weight: 700; transition: all 0.2s;">Go to Catalog</a>
            <a href="/Orders" style="border: 2px solid var(--primary); color: var(--primary); padding: 0.75rem 1.5rem; border-radius: 8px; text-decoration: none; font-weight: 700; transition: all 0.2s;">Recent Orders</a>
        </div>
    </div>
    
    <div style="flex: 1;">
        <img src="/images/service.png" alt="Global Logistics Support" style="width: 100%; border-radius: var(--radius); box-shadow: var(--shadow); border: 1px solid rgba(0,0,0,0.05);" />
    </div>
</div>
