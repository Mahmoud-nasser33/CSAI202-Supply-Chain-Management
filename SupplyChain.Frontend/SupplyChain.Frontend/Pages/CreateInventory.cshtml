@page
@model SupplyChain.Frontend.Pages.CreateInventoryModel
@{
    ViewData["Title"] = "Add Inventory Stock";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-box-seam"></i> Add Stock</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label">Product Name</label>
                            <input type="text" class="form-control" name="ProductName" placeholder="e.g. Steel Sheets" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Warehouse</label>
                            <select class="form-select">
                                <option>Central Warehouse (Cairo)</option>
                                <option>Port Said Distribution</option>
                                <option>Alexandria Depot</option>
                            </select>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Quantity</label>
                                <input type="number" class="form-control" name="Quantity" value="100" required>
                            </div>
                             <div class="col-md-6 mb-3">
                                <label class="form-label">Reorder Level</label>
                                <input type="number" class="form-control" name="ReorderLevel" value="20" required>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">Confirmation & Add</button>
                            <a href="/Inventory" class="btn btn-light">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
