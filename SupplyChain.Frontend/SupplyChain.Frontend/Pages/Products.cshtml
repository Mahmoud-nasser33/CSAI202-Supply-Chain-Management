@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model SupplyChain.Frontend.Pages.ProductsModel
@{
    ViewData["Title"] = "Products";
}

<div class="page-header">
    <h1>Products Management</h1>
    <p class="text-muted">Comprehensive inventory catalog and product registration system.</p>
</div>

<img src="/images/inventory.png" alt="Product Inventory" class="illustrative-img" />


<h3>Register New Product</h3>
<div class="classic-form">
    <form method="post">
        <div>
            <label>Product Designation</label>
            <input type="text" name="NewProductName" placeholder="Enter product name" />
        </div>
        <div>
            <label>Unit Valuation (USD)</label>
            <input type="text" name="NewProductPrice" placeholder="0.00" />
        </div>
        <button type="submit">Complete Registration</button>
    </form>
</div>

<hr />


<h3>Master Product Catalog</h3>
<table class="classic-table">
    <thead>
        <tr>
            <th>Designation</th>
            <th>Pricing</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ProductList)
        {
            <tr>
                <td style="font-weight: 600;">@item.Name</td>
                <td>$@item.Price.ToString("N2")</td>
                <td>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@item.ProductID" onsubmit="return confirm('Remove this product?');" style="margin:0;">
                         <button type="submit" style="background:none; border:none; color:red; cursor:pointer; font-weight:bold; padding:0;">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
