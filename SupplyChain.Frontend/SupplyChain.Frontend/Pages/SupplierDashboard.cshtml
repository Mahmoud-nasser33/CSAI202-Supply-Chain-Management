@page
@model SupplyChain.Frontend.Pages.SupplierDashboardModel
@{
    ViewData["Title"] = "Supplier Portal";
}

<div class="container-bento">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6 fw-bold mb-1">Supplier Portal</h1>
            <p class="text-muted">Manage purchase orders and deliveries</p>
        </div>
        <div>
            <span class="badge bg-warning px-3 py-2">Supplier</span>
        </div>
    </div>

    <!-- Supplier KPI Cards - Supply-Focused -->
    <div class="bento-grid mb-4">
        <!-- Inventory Supply Capacity -->
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div>
                        <p class="text-muted mb-1 small fw-bold">SUPPLY CAPACITY</p>
                        <h2 class="display-4 fw-bold text-primary mb-0">85%</h2>
                    </div>
                    <div class="rounded-circle bg-primary bg-opacity-10 p-3">
                        <i class="bi bi-speedometer2 text-primary" style="font-size: 1.5rem;"></i>
                    </div>
                </div>
                <div class="progress" style="height: 8px;">
                    <div class="progress-bar bg-primary" style="width: 85%"></div>
                </div>
                <small class="text-muted mt-2 d-block">8,500 / 10,000 units available</small>
            </div>
        </div>

        <!-- Raw Materials Stock -->
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div>
                        <p class="text-muted mb-1 small fw-bold">RAW MATERIALS</p>
                        <h2 class="display-4 fw-bold text-success mb-0">92%</h2>
                    </div>
                    <div class="rounded-circle bg-success bg-opacity-10 p-3">
                        <i class="bi bi-box-seam-fill text-success" style="font-size: 1.5rem;"></i>
                    </div>
                </div>
                <small class="text-muted">Sufficient for 45 days production</small>
            </div>
        </div>

        <!-- Production Schedule -->
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div>
                        <p class="text-muted mb-1 small fw-bold">PRODUCTION QUEUE</p>
                        <h2 class="display-4 fw-bold text-warning mb-0">12</h2>
                    </div>
                    <div class="rounded-circle bg-warning bg-opacity-10 p-3">
                        <i class="bi bi-gear-fill text-warning" style="font-size: 1.5rem;"></i>
                    </div>
                </div>
                <small class="text-muted">Orders in production this week</small>
            </div>
        </div>

        <!-- Quality Score -->
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div>
                        <p class="text-muted mb-1 small fw-bold">QUALITY SCORE</p>
                        <h2 class="display-4 fw-bold text-info mb-0">98.5%</h2>
                    </div>
                    <div class="rounded-circle bg-info bg-opacity-10 p-3">
                        <i class="bi bi-shield-check text-info" style="font-size: 1.5rem;"></i>
                    </div>
                </div>
                <div class="d-flex gap-1">
                    <i class="bi bi-star-fill text-warning"></i>
                    <i class="bi bi-star-fill text-warning"></i>
                    <i class="bi bi-star-fill text-warning"></i>
                    <i class="bi bi-star-fill text-warning"></i>
                    <i class="bi bi-star-fill text-warning"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-lightning-charge-fill text-warning"></i> Quick Actions</h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-3">
                    <button class="btn btn-primary w-100 py-3">
                        <i class="bi bi-plus-circle d-block mb-2" style="font-size: 2rem;"></i>
                        Add Inventory
                    </button>
                </div>
                <div class="col-md-3">
                    <button class="btn btn-outline-primary w-100 py-3">
                        <i class="bi bi-truck d-block mb-2" style="font-size: 2rem;"></i>
                        Schedule Shipment
                    </button>
                </div>
                <div class="col-md-3">
                    <button class="btn btn-outline-success w-100 py-3">
                        <i class="bi bi-clipboard-check d-block mb-2" style="font-size: 2rem;"></i>
                        Quality Check
                    </button>
                </div>
                <div class="col-md-3">
                    <button class="btn btn-outline-warning w-100 py-3">
                        <i class="bi bi-file-earmark-text d-block mb-2" style="font-size: 2rem;"></i>
                        Generate Report
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Inventory Supply Status -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-boxes"></i> Inventory Supply Status</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>SKU</th>
                            <th>Available Stock</th>
                            <th>In Production</th>
                            <th>Lead Time</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><strong>Electronics Product 1</strong></td>
                            <td>SKU-ELEC-001</td>
                            <td>850 units</td>
                            <td>200 units</td>
                            <td>5-7 days</td>
                            <td><span class="badge bg-success">In Stock</span></td>
                            <td><button class="btn btn-sm btn-primary">Replenish</button></td>
                        </tr>
                        <tr>
                            <td><strong>Furniture Product 5</strong></td>
                            <td>SKU-FURN-005</td>
                            <td>45 units</td>
                            <td>100 units</td>
                            <td>10-14 days</td>
                            <td><span class="badge bg-warning">Low Stock</span></td>
                            <td><button class="btn btn-sm btn-warning">Priority</button></td>
                        </tr>
                        <tr>
                            <td><strong>Tools Product 3</strong></td>
                            <td>SKU-TOOL-003</td>
                            <td>320 units</td>
                            <td>0 units</td>
                            <td>3-5 days</td>
                            <td><span class="badge bg-success">Ready</span></td>
                            <td><button class="btn btn-sm btn-outline-primary">Ship</button></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    // Protect this page - require authentication
    if (!sessionManager.isLoggedIn() || !sessionManager.hasRole('supplier')) {
        window.location.href = '/Login';
    }
</script>
