@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model SupplyChain.Frontend.Pages.OrdersModel
@{
    ViewData["Title"] = "Orders";
}

<div class="page-header">
    <h1>Order Processing</h1>
    <p class="text-muted">Manage client purchase orders and fulfillment status.</p>
</div>

<img src="/images/service.png" alt="Order Management" class="illustrative-img" />


<h3>Create New Order</h3>
<div class="classic-form">
    <form method="post">
        <div>
            <label>Customer ID Reference</label>
            <input type="number" name="NewCustomerID" placeholder="Enter valid customer ID" />
        </div>
        <div>
            <label>Estimated Total Value ($)</label>
            <input type="number" name="NewOrderTotal" step="0.01" placeholder="0.00" />
        </div>
        <button type="submit">Initiate Order</button>
    </form>
</div>

<hr />


<h3>Recent Order Log</h3>
<table class="classic-table">
    <thead>
        <tr>
            <th>Order Ref #</th>
            <th>Client Name</th>
            <th>Booking Date</th>
            <th>Current Status</th>
            <th>Total Value</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderList)
        {
            <tr>
                <td style="font-weight: 700;">#@item.OrderID</td>
                <td>@item.CustomerName</td>
                <td>@item.OrderDate.ToShortDateString()</td>
                <td>
                    <span style="background:var(--primary-light); color:var(--primary); padding:4px 8px; border-radius:4px; font-size:0.85rem; font-weight:700;">
                        @item.Status
                    </span>
                </td>
                <td>$@item.TotalAmount.ToString("N2")</td>
                <td>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@item.OrderID" onsubmit="return confirm('Remove this order?');" style="margin:0;">
                         <button type="submit" style="background:none; border:none; color:red; cursor:pointer; font-weight:bold; padding:0;">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
