@page "{id:int}"
@model SupplyChain.Frontend.Pages.EditShipmentModel
@{
    ViewData["Title"] = "Update Shipment Manifest";
}

<div class="row justify-content-center py-5">
    <div class="col-md-7">
        <div class="card border-0 shadow-lg glass-panel animate-enter">
            <div class="card-header bg-dark bg-gradient text-white py-3 border-0">
                <h3 class="card-title mb-0 fw-bold"><i class="bi bi-truck me-2"></i> Logistics Dispatch Control</h3>
            </div>
            <div class="card-body p-4">
                <form method="post">
                    <input type="hidden" asp-for="Shipment.ShipmentID" />
                    <input type="hidden" asp-for="Shipment.OrderID" />
                    <input type="hidden" asp-for="Shipment.WarehouseID" />

                    <div class="row mb-4">
                        <div class="col-6">
                            <label class="form-label fw-bold text-muted small uppercase">Reference Order</label>
                            <div class="fs-5 fw-bold text-dark">#@Model.Shipment.OrderID</div>
                        </div>
                        <div class="col-6">
                            <label class="form-label fw-bold text-muted small uppercase">Origin Node</label>
                            <div class="fs-5 fw-bold text-dark">@Model.Shipment.WarehouseName</div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold"><i class="bi bi-activity me-1 text-primary"></i> Current Transit Status</label>
                        <select asp-for="Shipment.Status" asp-items="Model.StatusOptions" class="form-select form-select-lg border-2 shadow-sm" required>
                        </select>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold"><i class="bi bi-calendar-event me-1 text-info"></i> Dispatch / Est. Arrival Date</label>
                        <input asp-for="Shipment.Shipment_Date" type="datetime-local" class="form-control border-2 shadow-sm" />
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold"><i class="bi bi-signpost-split me-1 text-success"></i> Logistics Carrier / Mode</label>
                        <input asp-for="Shipment.Shipped_Via" class="form-control border-2 shadow-sm" placeholder="e.g. DHL Express, Sea Freight" />
                    </div>

                    <div class="d-flex gap-3 mt-5">
                        <button type="submit" class="btn btn-dark btn-lg px-5 shadow fw-bold">
                            <i class="bi bi-arrow-repeat me-2"></i> Update Manifest
                        </button>
                        <a href="/Shipments" class="btn btn-light btn-lg border px-4">
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
