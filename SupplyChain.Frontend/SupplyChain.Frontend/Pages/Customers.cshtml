@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model SupplyChain.Frontend.Pages.CustomersModel
@{
    ViewData["Title"] = "Customers";
}

<div class="page-header">
    <h1>Client Management</h1>
    <p class="text-muted">Database of active global partners and verified customer profiles.</p>
</div>

<img src="/images/service.png" alt="Customer Relations" class="illustrative-img" />


<h3>Onboard New Client</h3>
<div class="classic-form">
    <form method="post">
        <div>
            <label>Full Legal Name</label>
            <input type="text" name="NewCustomerName" placeholder="Enter full name" />
        </div>
        <div>
            <label>Official Email Address</label>
            <input type="email" name="NewCustomerEmail" placeholder="client@company.com" />
        </div>
        <button type="submit">Onboard to System</button>
    </form>
</div>

<hr />


<h3>Verified Customer Database</h3>
<table class="classic-table">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Contact Email</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model.CustomerList)
        {
            <tr>
                <td style="font-weight: 600;">@customer.Name</td>
                <td>@customer.Email</td>
                <td>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@customer.CustomerID" onsubmit="return confirm('Remove this customer?');" style="margin:0;">
                         <button type="submit" style="background:none; border:none; color:red; cursor:pointer; font-weight:bold; padding:0;">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
