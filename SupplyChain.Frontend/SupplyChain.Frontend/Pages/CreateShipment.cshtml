@page
@model SupplyChain.Frontend.Pages.CreateShipmentModel
@{
    ViewData["Title"] = "Create Shipment";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0"><i class="bi bi-truck"></i> Create Shipment</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label">Order ID</label>
                            <input asp-for="Shipment.OrderID" type="number" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Warehouse ID</label>
                            <input asp-for="Shipment.WarehouseID" type="number" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Status</label>
                            <select asp-for="Shipment.Status" class="form-select">
                                <option>Preparing</option>
                                <option>In Transit</option>
                                <option>Delivered</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Carrier (Shipped Via)</label>
                            <input asp-for="Shipment.Shipped_Via" class="form-control" placeholder="e.g. DHL, FedEx" required>
                        </div>
                         <div class="mb-3">
                            <label class="form-label">Expected Delivery</label>
                            <input asp-for="Shipment.Shipment_Date" type="date" class="form-control" required>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">Dispatch Shipment</button>
                            <a href="/Shipments" class="btn btn-light">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
