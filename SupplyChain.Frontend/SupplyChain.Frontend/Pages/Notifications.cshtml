@page
@model SupplyChain.Frontend.Pages.NotificationsModel
@{
    ViewData["Title"] = "Notifications";
}

<div class="container-bento py-4">
    <div class="d-flex justify-content-between align-items-center mb-4 animate-enter">
        <div>
            <h2 class="fw-bold mb-0">Alerts & Messages</h2>
            <p class="text-muted mb-0">System updates and reminders</p>
        </div>
        <div>
            <button class="btn btn-outline-secondary shadow-sm rounded-pill px-3">
                <i class="bi bi-check-all me-2"></i> Mark All as Read
            </button>
        </div>
    </div>

    <!-- Notification Feed -->
    <div class="card shadow-lg border-0 glass-panel span-col-4 animate-enter delay-1">
        <div class="card-body p-0">
             <div class="d-flex justify-content-between align-items-center p-3 border-bottom bg-light bg-opacity-50">
                 <h5 class="fw-bold mb-0">Recent Activity</h5>
                 <span class="badge bg-primary rounded-pill">@Model.NotificationList.Count(n => !n.IsRead) New</span>
             </div>
            
             <div class="list-group list-group-flush">
                @foreach (var item in Model.NotificationList)
                {
                    <a href="#" class="list-group-item list-group-item-action border-bottom-0 py-3 @(item.IsRead ? "" : "bg-primary bg-opacity-10")" aria-current="true">
                        <div class="d-flex w-100 justify-content-between align-items-center">
                            <h6 class="mb-1 fw-bold @(!item.IsRead ? "text-primary" : "text-dark")">
                                <i class="bi @(item.Type == "System Alert" ? "bi-laptop" : "bi-truck") me-2"></i> @item.Type
                            </h6>
                            <small class="text-muted"><i class="bi bi-clock me-1"></i> @item.Date.ToString("g")</small>
                        </div>
                        <p class="mb-1 text-secondary ps-4 ms-1">@item.Message</p>
                    </a>
                }
            </div>
             <div class="p-3 text-center border-top">
                <small class="text-muted">Showing last 24 hours of activity</small>
            </div>
        </div>
    </div>
</div>
