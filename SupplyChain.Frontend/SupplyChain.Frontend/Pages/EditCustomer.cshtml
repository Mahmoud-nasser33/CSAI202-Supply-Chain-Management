@page "{id:int}"
@model SupplyChain.Frontend.Pages.EditCustomerModel
@{
    ViewData["Title"] = "Modify Parameters Customer";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-lg glass-panel animate-enter">
                <div class="card-header bg-primary bg-gradient text-white py-3 border-0">
                    <h3 class="card-title mb-0 fw-bold"><i class="bi bi-person-gear me-2"></i> Update Customer Profile</h3>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <input type="hidden" asp-for="Customer.CustomerID" />
                        <div class="mb-4">
                            <label class="form-label fw-bold"><i class="bi bi-person-fill me-1 text-primary"></i> Full Name</label>
                            <input asp-for="Customer.Name" class="form-control form-control-lg border-2 shadow-sm" placeholder="Enter customer name" required />
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold"><i class="bi bi-envelope-at-fill me-1 text-info"></i> Email Address</label>
                            <input asp-for="Customer.Email" type="email" class="form-control border-2 shadow-sm" placeholder="customer@example.com" required />
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold"><i class="bi bi-telephone-fill me-1 text-primary"></i> Phone Number</label>
                            <input asp-for="Customer.Phone" type="tel" class="form-control border-2 shadow-sm" placeholder="e.g. +20 123 456 7890" />
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold"><i class="bi bi-geo-alt-fill me-1 text-danger"></i> Street Address</label>
                            <textarea asp-for="Customer.Address" class="form-control border-2 shadow-sm" rows="2" placeholder="Street, Building, Apartment..."></textarea>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label class="form-label fw-bold"><i class="bi bi-building-fill me-1 text-warning"></i> City</label>
                                <input asp-for="Customer.City" class="form-control border-2 shadow-sm" placeholder="e.g. Cairo" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold"><i class="bi bi-globe me-1 text-success"></i> Country</label>
                                <input asp-for="Customer.Country" class="form-control border-2 shadow-sm" placeholder="e.g. Egypt" />
                            </div>
                        </div>

                        <div class="d-flex gap-3 mt-5">
                            <button type="submit" class="btn btn-primary btn-lg px-5 shadow">
                                <i class="bi bi-check-circle me-2"></i> Save Changes
                            </button>
                            <a href="/Customers" class="btn btn-light btn-lg border px-4">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
