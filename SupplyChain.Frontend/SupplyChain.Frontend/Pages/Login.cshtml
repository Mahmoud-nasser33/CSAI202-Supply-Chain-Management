@page
@model SupplyChain.Frontend.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = null; // No layout for login page
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Silsila SCM</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>

<div class="row g-0 min-vh-100 overflow-hidden">
    <!-- Left Side: Cinematic Visual -->
    <div class="col-lg-7 d-none d-lg-block position-relative">
        <div class="position-absolute w-100 h-100" style="background: url('/images/logistics-ship.png') center/cover no-repeat;"></div>
        <div class="position-absolute w-100 h-100" style="background: linear-gradient(135deg, rgba(15, 23, 42, 0.7), rgba(2, 6, 17, 0.9));"></div>
        <div class="position-absolute top-50 start-50 translate-middle text-white text-center w-75">
            <h1 class="display-3 fw-800 mb-4" style="font-family: 'Outfit', sans-serif !important;">Connect the <span class="text-primary">World</span></h1>
            <p class="lead opacity-75">Seamlessly manage your global supply chain with our enterprise-grade command center. Real-time insights, predictive intelligence, and secure governance at your fingertips.</p>
        </div>
        <div class="position-absolute bottom-0 start-0 p-5 text-white opacity-50">
            <small>&copy; 2025 Silsila SCM | Powered by Strategic AI</small>
        </div>
    </div>

    <!-- Right Side: Login Form -->
    <div class="col-lg-5 d-flex align-items-center justify-content-center bg-white">
        <div class="p-5 animate-enter w-100" style="max-width: 500px;">
            <div class="text-center mb-5">
                <div class="mb-4 d-inline-block">
                    <div class="rounded-circle bg-primary bg-opacity-10 d-flex align-items-center justify-content-center text-primary shadow-sm" style="width: 70px; height: 70px;">
                        <i class="bi bi-box-seam-fill" style="font-size: 2rem;"></i>
                    </div>
                </div>
                <h2 class="fw-800 text-dark mb-1" style="font-family: 'Outfit', sans-serif !important;">Executive Access</h2>
                <p class="text-secondary">Please authenticate to access Silsila Hub</p>
            </div>

            <form id="loginForm" class="text-start">
                <div class="mb-4">
                    <label class="form-label small fw-800 text-uppercase tracking-wider text-secondary">System Role</label>
                    <select id="roleSelect" class="form-select border-0 bg-light py-3 px-4 rounded-3" style="font-family: 'Inter', sans-serif;" required>
                        <option value="">Select Role...</option>
                        <option value="admin">Administrator</option>
                        <option value="user">Warehouse Staff</option>
                        <option value="customer">Customer</option>
                        <option value="supplier">Supplier</option>
                    </select>
                </div>

                <div class="mb-4">
                    <label class="form-label small fw-800 text-uppercase tracking-wider text-secondary">Executive Email</label>
                    <input type="email" id="emailInput" class="form-control border-0 bg-light py-3 px-4 rounded-3" placeholder="email@silsila.com" required>
                </div>

                <div class="mb-4">
                    <label class="form-label small fw-800 text-uppercase tracking-wider text-secondary">Security Token</label>
                    <div class="input-group">
                        <input type="password" id="passwordInput" class="form-control border-0 bg-light py-3 px-4 rounded-start-3" placeholder="••••••••" required>
                        <button class="btn bg-light border-0 px-3 rounded-end-3" type="button" id="togglePassword">
                            <i class="bi bi-eye text-secondary" id="toggleIcon"></i>
                        </button>
                    </div>
                </div>

                <div id="errorMessage" class="alert alert-danger d-none border-0 py-3 rounded-3" role="alert"></div>

                <div class="d-grid mt-5">
                    <button type="submit" id="loginBtn" class="btn btn-primary rounded-pill py-3 fw-800 text-uppercase tracking-wider shadow-lg d-flex align-items-center justify-content-center gap-2">
                        <span id="btnText">Initiate Session</span>
                        <i class="bi bi-arrow-right" id="btnIcon"></i>
                        <span class="spinner-border spinner-border-sm d-none" id="btnSpinner"></span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/js/session-manager.js"></script>
<script>
    // Password visibility toggle
    document.getElementById('togglePassword').addEventListener('click', function() {
        const passwordInput = document.getElementById('passwordInput');
        const toggleIcon = document.getElementById('toggleIcon');

        if (passwordInput.type === 'password') {
            passwordInput.type = 'text';
            toggleIcon.classList.remove('bi-eye');
            toggleIcon.classList.add('bi-eye-slash');
        } else {
            passwordInput.type = 'password';
            toggleIcon.classList.remove('bi-eye-slash');
            toggleIcon.classList.add('bi-eye');
        }
    });

    // Form submission
    document.getElementById('loginForm').addEventListener('submit', function(e) {
        e.preventDefault();

        const role = document.getElementById('roleSelect').value;
        const email = document.getElementById('emailInput').value;
        const password = document.getElementById('passwordInput').value;
        const rememberMe = document.getElementById('rememberMe').checked;

        const errorMessage = document.getElementById('errorMessage');
        const loginBtn = document.getElementById('loginBtn');
        const btnText = document.getElementById('btnText');
        const btnIcon = document.getElementById('btnIcon');
        const btnSpinner = document.getElementById('btnSpinner');

        // Show loading
        loginBtn.disabled = true;
        btnText.textContent = 'Signing in...';
        btnIcon.classList.add('d-none');
        btnSpinner.classList.remove('d-none');
        errorMessage.classList.add('d-none');

        // Call real authentication API
        fetch('http://localhost:5256/api/Auth/login', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                email: email,
                password: password
            })
        })
        .then(response => {
            if (!response.ok) {
                return response.json().then(data => {
                    throw new Error(data.message || 'Invalid email or password');
                });
            }
            return response.json();
        })
        .then(data => {
            if (data.success && data.user) {
                // Login using session manager
                sessionManager.login(data.user);

                // Redirect to appropriate dashboard
                window.location.href = sessionManager.getDashboardUrl(data.user.role);
            } else {
                throw new Error(data.message || 'Login failed');
            }
        })
        .catch(error => {
            // Show error
            errorMessage.textContent = error.message || 'Invalid email or password';
            errorMessage.classList.remove('d-none');

            // Reset button
            loginBtn.disabled = false;
            btnText.textContent = 'Sign In';
            btnIcon.classList.remove('d-none');
            btnSpinner.classList.add('d-none');
        });
    });

    // Auto-fill based on role selection (for demo)
    document.getElementById('roleSelect').addEventListener('change', function() {
        const role = this.value;
        const emailInput = document.getElementById('emailInput');
        const passwordInput = document.getElementById('passwordInput');

        const demoCredentials = {
            'admin': { email: 'admin@silsila.com', password: 'admin123' },
            'user': { email: 'user@silsila.com', password: 'user123' },
            'customer': { email: 'customer@silsila.com', password: 'customer123' },
            'supplier': { email: 'supplier@silsila.com', password: 'supplier123' }
        };

        if (role && demoCredentials[role]) {
            emailInput.value = demoCredentials[role].email;
            passwordInput.value = demoCredentials[role].password;
        }
    });
</script>

</body>
</html>