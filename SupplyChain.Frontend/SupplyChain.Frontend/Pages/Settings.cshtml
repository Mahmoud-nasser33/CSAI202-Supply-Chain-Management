@page
@model SupplyChain.Frontend.Pages.SettingsModel
@{
    ViewData["Title"] = "Settings";
}

<div class="container-bento py-4">
    <div class="d-flex justify-content-between align-items-center mb-5 animate-enter">
        <div>
            <h2 class="fw-bold mb-0">System Governance Configuration</h2>
            <p class="text-muted mb-0">Manage preferences and localization</p>
        </div>
        <div>
             <button class="btn btn-primary btn-lg shadow-sm" onclick="alert('Settings Saved!')">
                 <i class="bi bi-save me-2"></i> Save Changes
             </button>
        </div>
    </div>

    <div class="bento-grid">

        <div class="card border-0 shadow-sm glass-panel span-col-2 animate-enter delay-1 h-100">
             <div class="card-body p-4">
                 <h5 class="fw-bold mb-4 gradient-text-primary"><i class="bi bi-palette me-2"></i> Appearance & UI</h5>

                 <div class="d-flex justify-content-between align-items-center mb-4 p-3 bg-light bg-opacity-50 rounded-3">
                    <div>
                        <h6 class="mb-1 fw-bold">Dark Mode</h6>
                        <small class="text-muted">Switch between light and dark themes.</small>
                    </div>
                    <div class="form-check form-switch">
                        <input class="form-check-input fs-4" type="checkbox" id="darkModeToggle" style="cursor: pointer;">
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center p-3 bg-light bg-opacity-50 rounded-3">
                    <div>
                        <h6 class="mb-1 fw-bold">Breathing Animations</h6>
                        <small class="text-muted">Subtle background pulses.</small>
                    </div>
                    <div class="form-check form-switch">
                        <input class="form-check-input fs-4" type="checkbox" id="animationToggle" checked style="cursor: pointer;">
                    </div>
                </div>
             </div>
        </div>

        <div class="card border-0 shadow-sm glass-panel span-col-2 animate-enter delay-2 h-100">
             <div class="card-body p-4">
                 <h5 class="fw-bold mb-4 gradient-text-primary"><i class="bi bi-globe me-2"></i> Language & Region</h5>

                 <div class="mb-4">
                    <label class="form-label fw-bold text-muted small">DISPLAY LANGUAGE</label>
                    <div class="input-group input-group-lg shadow-sm">
                        <span class="input-group-text bg-white border-0"><i class="bi bi-translate text-primary"></i></span>
                        <select class="form-select border-0 bg-light fw-bold text-dark">
                            <option value="en" selected>English (United States)</option>
                            <option value="ar">العربية (Arabic) - Beta</option>
                            <option value="es">Español (Coming Soon)</option>
                        </select>
                    </div>
                </div>

                <div class="alert alert-info border-0 shadow-sm d-flex align-items-center mb-0">
                    <i class="bi bi-info-circle-fill me-3 fs-4"></i>
                    <div>
                        <small class="fw-bold d-block">Regional Formatting</small>
                        <small class="text-opacity-75">Date, currency, and number formats will adjust automatically.</small>
                    </div>
                </div>
             </div>
        </div>
    </div>
</div>

<script>
    // Dark Mode Toggle Logic
    const dmToggle = document.getElementById('darkModeToggle');

    // Check saved state
    if(localStorage.getItem('theme') === 'dark') {
        dmToggle.checked = true;
        document.body.classList.add('dark-mode');
    }

    dmToggle.addEventListener('change', function() {
        if(this.checked) {
            document.body.classList.add('dark-mode');
            localStorage.setItem('theme', 'dark');
        } else {
            document.body.classList.remove('dark-mode');
            localStorage.setItem('theme', 'light');
        }
    });

    // Animation Logic
    const animToggle = document.getElementById('animationToggle');
    // Check saved animation state
    if(localStorage.getItem('animationPref') === 'off') {
        animToggle.checked = false;
        document.body.classList.remove('breathing-bg');
    } else {
        animToggle.checked = true; // default on
    }

    animToggle.addEventListener('change', function() {
        if(this.checked) {
            document.body.classList.add('breathing-bg');
            localStorage.setItem('animationPref', 'on');
        } else {
            document.body.classList.remove('breathing-bg');
            localStorage.setItem('animationPref', 'off');
        }
    });
</script>
