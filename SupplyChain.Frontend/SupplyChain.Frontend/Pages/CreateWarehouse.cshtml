@page
@model SupplyChain.Frontend.Pages.CreateWarehouseModel
@{
    ViewData["Title"] = "Add Logistics Hub";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card border-0 shadow-lg glass-panel animate-enter">
                <div class="card-header bg-success bg-gradient text-white py-3 border-0">
                    <h3 class="card-title mb-0 fw-bold"><i class="bi bi-building-plus-fill me-2"></i> Register New Facility</h3>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <div class="mb-4">
                            <label class="form-label fw-bold"><i class="bi bi-box-fill me-1 text-primary"></i> Hub Name</label>
                            <input asp-for="Warehouse.Name" class="form-control form-control-lg border-2 shadow-sm" placeholder="e.g. North Regional DC" required />
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold"><i class="bi bi-geo-alt-fill me-1 text-danger"></i> Geographic Location</label>
                            <input asp-for="Warehouse.Location" class="form-control border-2 shadow-sm" placeholder="e.g. 123 Logistics Way, Port City" required />
                        </div>

                        <div class="d-flex gap-3 mt-5">
                            <button type="submit" class="btn btn-success btn-lg px-5 shadow fw-bold">
                                <i class="bi bi-plus-circle me-2"></i> Deploy Facility
                            </button>
                            <a href="/Warehouses" class="btn btn-light btn-lg border px-4">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
