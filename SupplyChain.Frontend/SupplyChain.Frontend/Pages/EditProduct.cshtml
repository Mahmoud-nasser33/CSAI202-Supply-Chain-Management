@page "{id:int}"
@model SupplyChain.Frontend.Pages.EditProductModel
@{
    ViewData["Title"] = "Modify Parameters Product";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-lg glass-panel animate-enter">
                <div class="card-header bg-primary bg-gradient text-white py-3 border-0">
                    <h3 class="card-title mb-0 fw-bold"><i class="bi bi-pencil-square me-2"></i> Modify Parameters Catalog Item</h3>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <input type="hidden" asp-for="Product.Id" />

                        <div class="mb-4">
                            <label class="form-label fw-bold"><i class="bi bi-tag-fill me-1 text-primary"></i> Product Name</label>
                            <input asp-for="Product.Name" class="form-control form-control-lg border-2 shadow-sm" placeholder="Enter product name" required />
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6 text-dark font-weight-bold">
                                <label class="form-label fw-bold text-dark"><i class="bi bi-currency-dollar me-1 text-success"></i> Unit Price</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-2">$</span>
                                    <input asp-for="Product.Price" type="number" step="0.01" class="form-control border-2 shadow-sm" required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold text-dark"><i class="bi bi-box-seam me-1 text-warning"></i> Stock Level</label>
                                <input asp-for="Product.StockQuantity" type="number" class="form-control border-2 shadow-sm bg-light" readonly />
                                <small class="text-muted">Stock updates handled via Inventory module.</small>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6 text-dark font-weight-bold">
                                <label class="form-label fw-bold text-dark"><i class="bi bi-grid-3x3-gap-fill me-1 text-info"></i> Category</label>
                                <select asp-for="Product.CategoryID" class="form-select border-2 shadow-sm" required>
                                    <option value="">-- Choose Category --</option>
                                    @foreach (var cat in Model.Categories)
                                    {
                                        <option value="@cat.CategoryID">@cat.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold text-dark"><i class="bi bi-building me-1 text-danger"></i> Supplier</label>
                                <select asp-for="Product.SupplierID" class="form-select border-2 shadow-sm" required>
                                    <option value="">-- Choose Supplier --</option>
                                    @foreach (var sup in Model.Suppliers)
                                    {
                                        <option value="@sup.Id">@sup.Name</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold text-dark"><i class="bi bi-card-text me-1 text-primary"></i> Product Description</label>
                            <textarea asp-for="Product.Description" class="form-control border-2 shadow-sm" rows="4" placeholder="Detailed product specifications..."></textarea>
                        </div>

                        <div class="d-flex gap-3 mt-5">
                            <button type="submit" class="btn btn-primary btn-lg px-5 shadow">
                                <i class="bi bi-check-circle me-2"></i> Update Product
                            </button>
                            <a href="/Products" class="btn btn-light btn-lg border px-4">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>