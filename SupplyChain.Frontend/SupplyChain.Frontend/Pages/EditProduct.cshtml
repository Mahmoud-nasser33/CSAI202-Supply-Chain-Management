@page "{id:int}"
@model SupplyChain.Frontend.Pages.EditProductModel
@{
    ViewData["Title"] = "Edit Product";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">✏️ Edit Product</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="Product.Id" />

                        <div class="mb-3">
                            <label class="form-label">Product Name</label>
                            <input asp-for="Product.Name" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Price ($)</label>
                            <input asp-for="Product.Price" type="number" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Stock Quantity</label>
                            <input asp-for="Product.StockQuantity" type="number" class="form-control" required />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">Save Changes</button>
                            <a href="/Products" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>