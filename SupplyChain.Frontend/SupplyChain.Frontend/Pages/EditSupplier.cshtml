@page "{id:int}"
@model SupplyChain.Frontend.Pages.EditSupplierModel
@{
    ViewData["Title"] = "Modify Parameters Supplier";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-lg glass-panel animate-enter">
                <div class="card-header bg-primary bg-gradient text-white py-3 border-0">
                    <h3 class="card-title mb-0 fw-bold"><i class="bi bi-building-gear me-2"></i> Update Supplier Partnership</h3>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <input type="hidden" asp-for="Supplier.SupplierID" />

                        <div class="mb-4">
                            <label class="form-label fw-bold"><i class="bi bi-buildings me-1 text-primary"></i> Company Name</label>
                            <input asp-for="Supplier.Name" class="form-control form-control-lg border-2 shadow-sm" placeholder="Enter company name" required />
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label class="form-label fw-bold"><i class="bi bi-envelope-at me-1 text-info"></i> Contact Email</label>
                                <input asp-for="Supplier.Email" type="email" class="form-control border-2 shadow-sm" placeholder="contact@company.com" required />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold"><i class="bi bi-telephone me-1 text-success"></i> Phone / Contact Info</label>
                                <input asp-for="Supplier.Contact_Info" class="form-control border-2 shadow-sm" placeholder="+123..." />
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label class="form-label fw-bold"><i class="bi bi-clock-history me-1 text-warning"></i> Lead Time (Days)</label>
                                <input asp-for="Supplier.LeadTimeDays" type="number" class="form-control border-2 shadow-sm" min="1" required />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold"><i class="bi bi-star-fill me-1 text-danger"></i> Performance Rating</label>
                                <input asp-for="Supplier.Rating" type="number" step="0.1" min="0" max="5" class="form-control border-2 shadow-sm" required />
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold"><i class="bi bi-geo-alt-fill me-1 text-secondary"></i> Headquarters Address</label>
                            <textarea asp-for="Supplier.Address" class="form-control border-2 shadow-sm" rows="3" placeholder="Full address..."></textarea>
                        </div>

                        <div class="d-flex gap-3 mt-5">
                            <button type="submit" class="btn btn-primary btn-lg px-5 shadow">
                                <i class="bi bi-check-circle me-2"></i> Save Changes
                            </button>
                            <a href="/Suppliers" class="btn btn-light btn-lg border px-4">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
