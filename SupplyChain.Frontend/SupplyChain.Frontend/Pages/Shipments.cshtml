
@page
@model SupplyChain.Frontend.Pages.ShipmentsModel
@{
    ViewData["Title"] = "Shipments";
}

<div class="container-bento py-4">
    <div class="d-flex justify-content-between align-items-center mb-4 animate-enter">
        <div>
            <h2 class="fw-bold mb-0" id="shipmentsPageTitle">Active Shipments</h2>
            <p class="text-muted mb-0" id="shipmentsPageDesc">Live delivery tracking</p>
        </div>
        <div class="role-staff-admin-only" style="display: none;">
             <a href="/CreateShipment" class="btn btn-primary btn-lg shadow-sm">
                 <i class="bi bi-truck me-2"></i> Create Shipment
             </a>
        </div>
    </div>

    <!-- Shipments Grid -->
    <div class="bento-grid">
        @foreach (var shipment in Model.Shipments)
        {
            <div class="card border-0 shadow-sm glass-panel span-col-2 animate-enter delay-1 h-100">
                <div class="card-header bg-transparent border-bottom-0 pt-0 px-0 d-flex justify-content-between align-items-center mb-2">
                    <div class="d-flex align-items-center">
                        <div class="bg-gradient-orange text-white rounded-circle p-2 me-3 shadow-sm" style="width: 45px; height: 45px; display: flex; align-items: center; justify-content: center;">
                            <i class="bi bi-truck fs-5"></i>
                        </div>
                        <div>
                            <h5 class="fw-bold mb-0">#@shipment.Id</h5>
                            <small class="text-muted"><i class="bi bi-geo-alt-fill"></i> @shipment.OriginWarehouse &rarr; @shipment.DestinationAddress</small>
                        </div>
                    </div>
                    <div>
                         @if(shipment.Status == "Delivered") {
                             <span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill px-3">Delivered</span>
                        } else if (shipment.Status == "In Transit") {
                             <span class="badge bg-primary-subtle text-primary border border-primary-subtle rounded-pill px-3">In Transit</span>
                        } else {
                             <span class="badge bg-secondary-subtle text-secondary border border-secondary-subtle rounded-pill px-3">Processing</span>
                        }
                    </div>
                </div>
                
                <div class="card-body px-0 pb-0">
                    <!-- Progress Stepper -->
                    <div class="position-relative my-4 mx-2">
                        <div class="progress bg-light" style="height: 6px;">
                            <div class="progress-bar bg-gradient-orange" role="progressbar" style="width: @shipment.Progress%;" aria-valuenow="@shipment.Progress" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        
                        <!-- Dots -->
                        <div class="position-absolute top-0 start-0 translate-middle p-1 bg-white rounded-circle border border-2 @(shipment.CurrentStep >= 0 ? "border-primary" : "border-secondary")" style="margin-top: 3px;"></div>
                        <div class="position-absolute top-0 start-33 translate-middle p-1 bg-white rounded-circle border border-2 @(shipment.CurrentStep >= 1 ? "border-primary" : "border-secondary")" style="margin-top: 3px; left: 33%;"></div>
                        <div class="position-absolute top-0 start-66 translate-middle p-1 bg-white rounded-circle border border-2 @(shipment.CurrentStep >= 2 ? "border-primary" : "border-secondary")" style="margin-top: 3px; left: 66%;"></div>
                        <div class="position-absolute top-0 start-100 translate-middle p-1 bg-white rounded-circle border border-2 @(shipment.CurrentStep >= 3 ? "border-success" : "border-secondary")" style="margin-top: 3px;"></div>
                        
                        <div class="d-flex justify-content-between mt-3 text-muted small fw-bold">
                            <span>Processing</span>
                            <span>Shipped</span>
                            <span>Transit</span>
                            <span>Delivered</span>
                        </div>
                    </div>

                    <div class="bg-light bg-opacity-50 rounded-3 p-3 mt-4 border border-light">
                        <div class="row g-2">
                            <div class="col-6 border-end">
                                <small class="text-uppercase text-muted fw-bold" style="font-size: 0.7rem;">Arrival</small>
                                <p class="mb-0 fw-bold @(shipment.Status == "Delivered" ? "text-success" : "text-dark")">
                                    @shipment.EstimatedArrival.ToString("MMM dd")
                                </p>
                            </div>
                            <div class="col-6 ps-3">
                                <small class="text-uppercase text-muted fw-bold" style="font-size: 0.7rem;">Items</small>
                                <p class="mb-0 fw-bold text-dark">
                                    @shipment.Items.Sum(i => i.Quantity) Units
                                </p>
                            </div>
                        </div>
                         <div class="mt-3 pt-2 border-top">
                             <div class="d-flex gap-2 flex-wrap">
                                @foreach (var item in shipment.Items.Take(2))
                                {
                                    <span class="badge bg-white text-dark border shadow-sm">
                                        @item.Quantity @item.ProductName
                                    </span>
                                }
                                @if(shipment.Items.Count > 2) {
                                    <span class="badge bg-light text-muted border">+@(shipment.Items.Count - 2) more</span>
                                }
                            </div>
                        </div>
                    </div>
                    
                    <div class="text-end mt-3 role-staff-admin-only">
                         <form method="post" asp-page-handler="Delete" asp-route-id="@shipment.Id" onsubmit="return confirm('Delete?');" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-link text-danger text-decoration-none">Cancel Shipment</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const user = sessionManager.getCurrentUser();
        if (!user) return;

        const staffOnly = document.querySelectorAll('.role-staff-admin-only');
        const title = document.querySelector('h2');
        const desc = document.querySelector('p.text-muted');

        if (user.role === 'customer') {
            if (title) title.textContent = 'My Deliveries';
            if (desc) desc.textContent = 'Live tracking for your active orders.';
            staffOnly.forEach(el => el.style.display = 'none');
        } else {
            staffOnly.forEach(el => el.style.display = 'block');
        }
    });

    // Protect this page
    if (!sessionManager.isLoggedIn()) {
        window.location.href = '/Login';
    }
</script>
