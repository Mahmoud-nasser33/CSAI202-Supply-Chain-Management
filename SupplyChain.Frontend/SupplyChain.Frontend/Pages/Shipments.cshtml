@page
@model SupplyChain.Frontend.Pages.ShipmentsModel
@{
    ViewData["Title"] = "Shipments";
}

<div class="container mt-5">
    <h2 class="text-primary mb-4">Active Shipments</h2>
    <hr />

    <div class="row">
        @if (Model.Shipments != null && Model.Shipments.Any())
        {
            @foreach (var shipment in Model.Shipments)
            {
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-header bg-light d-flex justify-content-between">
                            <strong>Shipment #@shipment.Id</strong>
                            <span class="badge bg-primary">@shipment.Status</span>
                        </div>
                        <div class="card-body">
                            <p><strong>From:</strong> @shipment.OriginWarehouse</p>
                            <p><strong>To:</strong> @shipment.DestinationAddress</p>
                            <p><strong>ETA:</strong> @shipment.EstimatedArrival.ToString("MMM dd, yyyy")</p>
                            
                            <h6 class="mt-3 border-bottom pb-2">Contents:</h6>
                            <ul class="list-group list-group-flush">
                                @if (shipment.Items != null)
                                {
                                    @foreach (var item in shipment.Items)
                                    {
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            @item.ProductName
                                            <span class="badge bg-secondary rounded-pill">@item.Quantity</span>
                                        </li>
                                    }
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center text-muted">
                <p>No shipments found.</p>
            </div>
        }
    </div>
</div>
