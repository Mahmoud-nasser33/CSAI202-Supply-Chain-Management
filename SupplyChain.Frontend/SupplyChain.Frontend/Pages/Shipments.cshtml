@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model SupplyChain.Frontend.Pages.ShipmentsModel
@{
    ViewData["Title"] = "Shipments";
}

<div class="page-header">
    <h1>Logistics & Shipments</h1>
    <p class="text-muted">Track active deliveries and order order fulfillment status.</p>
</div>

<img src="/images/hero.png" alt="Logistics" class="illustrative-img" />


<h3>Create New Shipment</h3>
<div class="classic-form">
    <form method="post">
        <div>
            <label>Order Reference ID</label>
            <input type="number" name="NewOrderID" placeholder="Order ID" />
        </div>
        <div>
            <label>Origin Warehouse ID</label>
            <input type="number" name="NewWarehouseID" placeholder="Warehouse ID" />
        </div>
        <div>
            <label>Carrier / Method</label>
            <input type="text" name="NewShippedVia" placeholder="e.g. FedEx, Maersk" />
        </div>
        <button type="submit">Dispatch Shipment</button>
    </form>
</div>

<hr />


<h3>Active Shipments</h3>
<table class="classic-table">
    <thead>
        <tr>
            <th>Ref #</th>
            <th>Customer Dest.</th>
            <th>Origin Warehouse</th>
            <th>Carrier</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ShipmentList)
        {
            <tr>
                <td style="font-weight: 700;">#@item.OrderID</td>
                <td>@item.CustomerName</td>
                <td>@item.WarehouseName</td>
                <td>@item.ShippedVia</td>
                <td>
                    <span style="background:var(--primary-light); color:var(--primary); padding:4px 8px; border-radius:4px; font-size:0.85rem; font-weight:700;">
                        @item.Status
                    </span>
                </td>
                <td>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@item.ShipmentID" onsubmit="return confirm('Remove this shipment?');" style="margin:0;">
                         <button type="submit" style="background:none; border:none; color:red; cursor:pointer; font-weight:bold; padding:0;">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
