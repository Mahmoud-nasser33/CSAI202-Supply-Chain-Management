@page
@model SupplyChain.Frontend.Pages.PaymentsModel
@{
    ViewData["Title"] = "Payments";
}

<div class="container-bento py-4">
    <div class="d-flex justify-content-between align-items-center mb-4 animate-enter">
        <div>
            <h2 class="fw-bold mb-0">Financial Overview</h2>
            <p class="text-muted mb-0">Transaction processing & revenue</p>
        </div>
        <div>
             <button class="btn btn-outline-secondary shadow-sm">
                 <i class="bi bi-download me-2"></i> Export Report
             </button>
        </div>
    </div>

    <!-- Revenue Dashboard -->
    <div class="bento-grid mb-5">
        <!-- Main Revenue Card - Span 2 -->
        <div class="card border-0 shadow-sm glass-panel bg-gradient-primary text-white span-col-2 animate-enter delay-1" style="background: linear-gradient(135deg, #0f172a 0%, #334155 100%) !important;">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="bg-white bg-opacity-25 rounded-circle p-2">
                        <i class="bi bi-cash-stack fs-4"></i>
                    </div>
                     <span class="badge bg-white bg-opacity-25 border border-white border-opacity-25">+8.4%</span>
                </div>
                <!-- Dynamic Revenue -->
                <h2 class="display-4 fw-bold mb-0">$842,000</h2>
                <small class="text-white text-opacity-75">Processed this month</small>
            </div>
        </div>

        <!-- Pending -->
        <div class="card border-0 shadow-sm glass-panel animate-enter delay-2">
             <div class="card-body">
                 <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="bg-warning bg-opacity-10 text-warning rounded-circle p-2">
                        <i class="bi bi-clock fs-4"></i>
                    </div>
                     <span class="text-warning small fw-bold">Pending</span>
                </div>
                <h2 class="fw-bold mb-0 text-dark">$45,000</h2>
                <small class="text-muted">Awaiting settlement</small>
            </div>
        </div>

        <!-- Failed -->
        <div class="card border-0 shadow-sm glass-panel animate-enter delay-3">
             <div class="card-body">
                 <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="bg-danger bg-opacity-10 text-danger rounded-circle p-2">
                        <i class="bi bi-exclamation-circle fs-4"></i>
                    </div>
                     <span class="text-danger small fw-bold">Issues</span>
                </div>
                <h2 class="fw-bold mb-0 text-dark">0.5%</h2>
                <small class="text-muted">Failure rate</small>
            </div>
        </div>
    </div>

    <!-- Transactions Widget -->
    <div class="card shadow-sm border-0 glass-panel animate-enter delay-4 span-col-4">
        <div class="card-body p-0">
             <div class="d-flex justify-content-between align-items-center p-3 border-bottom">
                 <h5 class="fw-bold mb-0">Recent Transactions</h5>
                 <div class="d-flex gap-2">
                     <select class="form-select border-0 bg-light" style="width: 150px;">
                         <option>All Methods</option>
                         <option>Credit Card</option>
                         <option>Bank Transfer</option>
                     </select>
                 </div>
             </div>
        
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 py-3">Transaction ID</th>
                            <th class="py-3">Order Ref</th>
                            <th class="py-3">Date</th>
                            <th class="py-3">Method</th>
                            <th class="py-3">Amount</th>
                            <th class="py-3">Status</th>
                            <th class="py-3">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.PaymentList)
                        {
                            <tr>
                                <td class="ps-4 fw-bold text-muted">#@item.PaymentID</td>
                                <td><a asp-page="/Orders" class="text-primary text-decoration-none fw-bold"><i class="bi bi-box-seam me-1"></i> #@item.OrderID</a></td>
                                <td>@item.PaymentDate.ToString("MMM dd, HH:mm")</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-credit-card me-2 text-muted"></i> @item.PaymentMethod
                                    </div>
                                </td>
                                <td class="fw-bold text-dark fs-5">$@item.Amount.ToString("N2")</td>
                                <td>
                                    @if (item.Status == "Completed")
                                    {
                                        <span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill px-3">Completed</span>
                                    }
                                    else if (item.Status == "Pending")
                                    {
                                        <span class="badge bg-warning-subtle text-warning-emphasis border border-warning-subtle rounded-pill px-3">Pending</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger-subtle text-danger border border-danger-subtle rounded-pill px-3">@item.Status</span>
                                    }
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-outline-secondary rounded-pill px-3">Invoice</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
