@page
@model SupplyChain.Frontend.Pages.CreateOrderModel
@{
    ViewData["Title"] = "New Supply Chain Order";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-lg glass-panel animate-enter">
                <div class="card-header bg-warning bg-gradient text-dark py-3 border-0">
                    <h3 class="card-title mb-0 fw-bold"><i class="bi bi-cart-plus-fill me-2"></i> Create Supply Order</h3>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger mb-4"></div>

                        <div class="mb-4">
                            <label class="form-label fw-bold"><i class="bi bi-person-fill me-1 text-primary"></i> Target Customer / Entity</label>
                            <select asp-for="Order.CustomerId" asp-items="Model.CustomerOptions" class="form-select form-select-lg border-2 shadow-sm" required>
                                <option value="">-- Select Trading Partner --</option>
                            </select>
                            <div class="form-text text-muted">Select the customer for whom this order is being initiated.</div>
                        </div>

                        <div class="card bg-light border-0 mb-4 shadow-sm">
                            <div class="card-body">
                                <h6 class="fw-bold mb-3"><i class="bi bi-box-seam me-1 text-info"></i> Line Item Technical Specifications</h6>
                                <div class="row">
                                    <div class="col-md-8 mb-3">
                                        <label class="form-label small fw-bold">Select Catalog Product</label>
                                        <select asp-for="Order.ProductId" asp-items="Model.ProductOptions" class="form-select border-2 shadow-sm" required>
                                            <option value="">-- Choose Product --</option>
                                        </select>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label class="form-label small fw-bold">Quantity</label>
                                        <input asp-for="Order.Quantity" type="number" class="form-control border-2 shadow-sm" min="1" value="1" required />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold"><i class="bi bi-credit-card-2-front me-1 text-success"></i> Settlement Method</label>
                            <select class="form-select border-2 shadow-sm" required>
                                <option value="BankTransfer">Bank Transfer (SWIFT)</option>
                                <option value="CreditCard">Corporate Credit Card</option>
                                <option value="Terms">Net 30 Terms</option>
                                <option value="LetterOfCredit">Letter of Credit</option>
                            </select>
                        </div>

                        <div class="d-flex gap-3 mt-5">
                            <button type="submit" class="btn btn-warning btn-lg px-5 shadow fw-bold">
                                <i class="bi bi-check2-circle me-2"></i> Finalize & Place Order
                            </button>
                            <a href="/Orders" class="btn btn-light btn-lg border px-4">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>