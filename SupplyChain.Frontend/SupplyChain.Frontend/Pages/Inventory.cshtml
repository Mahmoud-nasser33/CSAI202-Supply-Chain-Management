@page
@model SupplyChain.Frontend.Pages.InventoryModel
@{
    ViewData["Title"] = "Global Inventory Tracking";
}

<div class="container-bento py-4">

    <div class="d-flex justify-content-between align-items-center mb-4 animate-enter">
        <div>
            <h2 class="fw-bold mb-0">Stock Surveillance</h2>
            <p class="text-muted mb-0">Real-time inventory levels across all hubs</p>
        </div>
        <div>
            <a href="/CreateInventory" class="btn btn-primary btn-lg shadow-sm">
                <i class="bi bi-box-seam me-2"></i> Register New Stock
            </a>
        </div>
    </div>

    <div class="bento-grid mb-5">

        <div class="card border-0 shadow-sm glass-panel bg-gradient-primary text-white span-col-2 animate-enter delay-1" style="background: linear-gradient(135deg, #4f46e5 0%, #3730a3 100%) !important;">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="bg-white bg-opacity-25 rounded-circle p-2">
                        <i class="bi bi-shield-check fs-4"></i>
                    </div>
                    <span class="badge bg-white bg-opacity-25 text-white">System Governance Stable</span>
                </div>
                <h2 class="display-4 fw-bold mb-0">@Model.InventoryList.Sum(i => i.Quantity_Available).ToString("N0")</h2>
                <small class="text-white text-opacity-75">Units Currently In-Network</small>
            </div>
        </div>

        <div class="card border-0 shadow-sm glass-panel animate-enter delay-2">
            <div class="card-body text-center">
                @{ var lowStock = Model.InventoryList.Count(i => i.Quantity_Available <= i.Reorder_Level); }
                <div class="bg-danger bg-opacity-10 text-danger rounded-circle p-3 d-inline-block mb-3">
                    <i class="bi bi-exclamation-triangle fs-3"></i>
                </div>
                <h2 class="fw-bold mb-0 text-danger">@lowStock</h2>
                <small class="text-muted">Critical Reorder Alerts</small>
            </div>
        </div>

        <div class="card border-0 shadow-sm glass-panel animate-enter delay-3 text-center">
            <div class="card-body d-flex flex-column justify-content-center">
                <h2 class="fw-bold mb-0 text-dark">@Model.InventoryList.Count</h2>
                <small class="text-muted">Unique Stock Keeping Units (SKUs)</small>
                <div class="mt-3">
                    <span class="badge bg-info bg-opacity-10 text-info">Distributed</span>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 glass-panel animate-enter delay-4">
        <div class="card-body p-0">
            <div class="d-flex justify-content-between align-items-center p-3 border-bottom">
                <h5 class="fw-bold mb-0">Stock Master List</h5>
                <div class="input-group" style="width: 300px;">
                    <span class="input-group-text bg-light border-0"><i class="bi bi-search text-muted"></i></span>
                    <input type="text" class="form-control border-0 bg-light" placeholder="Filter by product or hub...">
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 py-3">Product Catalog Item</th>
                            <th class="py-3">Storage Hub</th>
                            <th class="py-3">Stock Level</th>
                            <th class="py-3">Status</th>
                            <th class="text-end pe-4 py-3">Resource Administration</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.InventoryList)
                        {
                            var isLow = item.Quantity_Available <= item.Reorder_Level;
                            <tr>
                                <td class="ps-4">
                                    <div class="fw-bold text-dark">@item.ProductName</div>
                                    <small class="text-muted">ID: #@item.InventoryID</small>
                                </td>
                                <td>
                                    <span class="text-muted"><i class="bi bi-building me-1"></i> @item.WarehouseName</span>
                                </td>
                                <td>
                                    <div class="fw-bold @(isLow ? "text-danger" : "text-dark")">@item.Quantity_Available.ToString("N0") Units</div>
                                    <small class="text-muted">Threshold: @item.Reorder_Level</small>
                                </td>
                                <td>
                                    @if(isLow)
                                    {
                                        <span class="badge bg-danger-subtle text-danger border border-danger-subtle rounded-pill px-3">Critically Low</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill px-3">Optimized</span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-light rounded-circle shadow-sm" type="button" data-bs-toggle="dropdown">
                                            <i class="bi bi-three-dots-vertical"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end border-0 shadow">
                                            <li><a class="dropdown-item" asp-page="/EditInventory" asp-route-id="@item.InventoryID"><i class="bi bi-pencil-square me-2 text-muted"></i> Adjust Stock</a></li>
                                            <li><a class="dropdown-item" href="#"><i class="bi bi-clock-history me-2 text-muted"></i> Movement History</a></li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li>
                                                <form method="post" asp-page-handler="Delete" asp-route-id="@item.InventoryID">
                                                    <button type="submit" class="dropdown-item text-danger"><i class="bi bi-trash me-2"></i> Terminate Record Record</button>
                                                </form>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @if(!Model.InventoryList.Any())
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-box-exclamation fs-1 d-block mb-3"></i>
                    No inventory records present in the network.
                </div>
            }
        </div>
    </div>
</div>
