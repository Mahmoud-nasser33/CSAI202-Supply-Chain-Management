@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model SupplyChain.Frontend.Pages.InventoryModel
@{
    ViewData["Title"] = "Inventory";
}

<div class="page-header">
    <h1>Warehouse Inventory</h1>
    <p class="text-muted">Monitor stock levels across global storage facilities.</p>
</div>

<img src="/images/inventory.png" alt="Warehouse Stock" class="illustrative-img" />


<h3>Update Stock Levels</h3>
<div class="classic-form">
    <form method="post">
        <div>
            <label>Product Reference ID</label>
            <input type="number" name="NewProductID" placeholder="Product ID" />
        </div>
        <div>
            <label>Warehouse Reference ID</label>
            <input type="number" name="NewWarehouseID" placeholder="Warehouse ID" />
        </div>
        <div>
            <label>Quantity On Hand</label>
            <input type="number" name="NewQuantity" placeholder="0" />
        </div>
        <button type="submit">Record Stock Entry</button>
    </form>
</div>

<hr />


<h3>Current Stock Overview</h3>
<table class="classic-table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Warehouse Location</th>
            <th>Stock Level</th>
            <th>Last Audit</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.InventoryList)
        {
            <tr>
                <td style="font-weight: 600;">@item.ProductName</td>
                <td>@item.WarehouseName</td>
                <td>
                   @if (item.Quantity < 10)
                   {
                       <span style="color:red; font-weight:bold;">@item.Quantity (Low)</span>
                   }
                   else
                   {
                       <span>@item.Quantity Units</span>
                   }
                </td>
                <td>@item.LastUpdated.ToShortDateString()</td>
                <td>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@item.InventoryID" onsubmit="return confirm('Remove this inventory item?');" style="margin:0;">
                         <button type="submit" style="background:none; border:none; color:red; cursor:pointer; font-weight:bold; padding:0;">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
