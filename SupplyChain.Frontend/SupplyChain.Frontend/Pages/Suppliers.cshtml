@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model SupplyChain.Frontend.Pages.SuppliersModel
@{
    ViewData["Title"] = "Suppliers";
}

<div class="page-header">
    <h1>Supplier Network</h1>
    <p class="text-muted">Manage global vendor relationships and performance ratings.</p>
</div>


<img src="/images/service.png" alt="Suppliers" class="illustrative-img" />


<h3>Register New Vendor</h3>
<div class="classic-form">
    <form method="post">
        <div>
            <label>Vendor Name</label>
            <input type="text" name="NewSupplierName" placeholder="e.g. Global Tech Supplies" />
        </div>
        <div>
            <label>Contact Email</label>
            <input type="email" name="NewSupplierEmail" placeholder="contact@vendor.com" />
        </div>
        <div>
            <label>Initial Rating (0-5)</label>
            <input type="text" name="NewSupplierRating" placeholder="5.0" />
        </div>
        <button type="submit">Onboard Vendor</button>
    </form>
</div>

<hr />


<h3>Active Supplier List</h3>
<table class="classic-table">
    <thead>
        <tr>
            <th>Vendor Name</th>
            <th>Email Contact</th>
            <th>Performance Rating</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.SupplierList)
        {
            <tr>
                <td style="font-weight: 600;">@item.Name</td>
                <td>@item.Email</td>
                <td>
                    <span style="color: var(--primary); font-weight: 700;">â˜… @item.Rating.ToString("F1")</span>
                </td>
                <td>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@item.SupplierID" onsubmit="return confirm('Remove this supplier?');" style="margin:0;">
                         <button type="submit" style="background:none; border:none; color:red; cursor:pointer; font-weight:bold; padding:0;">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
