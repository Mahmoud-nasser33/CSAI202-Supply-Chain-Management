@page
@model SupplyChain.Frontend.Pages.SuppliersModel
@{
    ViewData["Title"] = "Suppliers";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Suppliers Directory</h2>
        <a href="/CreateSupplier" class="btn btn-primary">
            <i class="bi bi-building-add"></i> Add New Supplier
        </a>
    </div>
    <hr />

    <div class="row">
        @if (Model.Suppliers != null && Model.Suppliers.Any())
        {
            @foreach (var supplier in Model.Suppliers)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title fw-bold text-dark">@supplier.Name</h5>
                            <div class="mb-2">
                                <span class="badge bg-info text-dark">Lead Time: @supplier.LeadTimeDays days</span>
                                <span class="badge bg-warning text-dark">Rating: @supplier.Rating/5.0</span>
                            </div>
                            <p class="card-text text-muted">
                                <i class="bi bi-geo-alt"></i> @supplier.Address
                            </p>
                            <p class="card-text">
                                <i class="bi bi-envelope"></i> <a href="mailto:@supplier.ContactInfo">@supplier.ContactInfo</a>
                            </p>
                        </div>
                        <div class="card-footer bg-white border-top-0 d-flex justify-content-end">
                             <form method="post" asp-page-handler="Delete" asp-route-id="@supplier.Id"
                                      onsubmit="return confirm('Are you sure?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Remove</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center text-muted">
                <p>No suppliers found.</p>
            </div>
        }
    </div>
</div>
