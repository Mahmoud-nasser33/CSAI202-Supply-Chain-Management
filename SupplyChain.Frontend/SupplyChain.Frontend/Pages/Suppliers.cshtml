@page
@model SupplyChain.Frontend.Pages.SuppliersModel
@{
    ViewData["Title"] = "Suppliers";
}

<div class="container-bento py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4 animate-enter">
        <div>
            <h2 class="fw-bold mb-0">Supplier Directory</h2>
            <p class="text-muted mb-0">Global partner network</p>
        </div>
        <div>
            <a href="/CreateSupplier" class="btn btn-primary btn-lg shadow-sm">
                <i class="bi bi-building-add me-2"></i> Add Supplier
            </a>
        </div>
    </div>

    <!-- Stats Grid -->
    <div class="bento-grid mb-5">
        <!-- Main Key Metric - Spans 2 -->
        <div class="card border-0 shadow-sm glass-panel bg-gradient-primary text-white span-col-2 animate-enter delay-1" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%) !important;">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="bg-white bg-opacity-25 rounded-circle p-2">
                        <i class="bi bi-globe2 fs-4"></i>
                    </div>
                </div>
                <h2 class="display-4 fw-bold mb-0">42</h2>
                <small class="text-white text-opacity-75">Active Global Partners across 12 countries</small>
            </div>
        </div>
        
        <!-- KPI 1 -->
        <div class="card border-0 shadow-sm glass-panel animate-enter delay-2">
            <div class="card-body">
                 <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="bg-info bg-opacity-10 text-info rounded-circle p-2">
                        <i class="bi bi-shield-check fs-4"></i>
                    </div>
                     <span class="text-info small fw-bold">Compliance</span>
                </div>
                <h2 class="fw-bold mb-0 text-dark">94%</h2>
                <small class="text-muted">Contract adherence</small>
            </div>
        </div>
        
        <!-- KPI 2 -->
        <div class="card border-0 shadow-sm glass-panel animate-enter delay-2">
            <div class="card-body">
                 <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="bg-secondary bg-opacity-10 text-secondary rounded-circle p-2">
                        <i class="bi bi-clock-history fs-4"></i>
                    </div>
                     <span class="text-secondary small fw-bold">Lead Time</span>
                </div>
                <h2 class="fw-bold mb-0 text-dark">4.2d</h2>
                <small class="text-muted">Avg fulfillment</small>
            </div>
        </div>
    </div>

    <h4 class="fw-bold mb-3 animate-enter delay-3">Partner List</h4>
    
    <!-- Partners Grid (Reusing Bento Grid for alignment, effectively a 4-col responsive list) -->
    <div class="bento-grid">
        @if (Model.Suppliers != null && Model.Suppliers.Any())
        {
            @foreach (var supplier in Model.Suppliers)
            {
                <div class="card border-0 shadow-sm glass-panel h-100 animate-enter delay-4">
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between mb-3">
                             <div class="bg-light rounded-circle p-3 text-primary">
                                 <i class="bi bi-building fs-4"></i>
                             </div>
                             <span class="badge bg-warning text-dark align-self-start"><i class="bi bi-star-fill"></i> @supplier.Rating</span>
                        </div>
                        <h4 class="fw-bold text-dark mb-1">@supplier.Name</h4>
                         <p class="text-muted small mb-3"><i class="bi bi-geo-alt"></i> @supplier.Address</p>
                        
                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center p-2 bg-light rounded mb-3">
                                <span class="small text-muted">Lead Time</span>
                                <span class="fw-bold text-dark">@supplier.LeadTimeDays Days</span>
                            </div>
                            
                            <div class="d-grid gap-2">
                                <a href="mailto:@supplier.ContactInfo" class="btn btn-outline-secondary btn-sm">Contact</a>
                                <form method="post" asp-page-handler="Delete" asp-route-id="@supplier.Id" onsubmit="return confirm('Remove partner?');">
                                    <button type="submit" class="btn btn-outline-danger btn-sm w-100">Remove</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
             <div class="span-col-4 text-center py-5 text-muted glass-panel">
                <i class="bi bi-building-exclamation fs-1 d-block mb-3"></i>
                No suppliers in the network.
            </div>
        }
    </div>
</div>
