    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Sidebar Toggle Logic
            const sidebarToggle = document.getElementById('sidebarToggle');
            if (sidebarToggle) {
                sidebarToggle.addEventListener('click', function(e) {
                    e.preventDefault();
                    const isToggled = document.body.classList.toggle('sidebar-toggled');
                    sidebarToggle.setAttribute('aria-expanded', isToggled.toString());
                    sidebarToggle.setAttribute('aria-pressed', isToggled.toString());
                });
            }

            // Close sidebar when clicking overlay (mobile)
            document.addEventListener('click', function(e) {
                if (window.innerWidth < 768 &&
                    document.body.classList.contains('sidebar-toggled') &&
                    !e.target.closest('#sidebar-wrapper') &&
                    !e.target.closest('#sidebarToggle')) {
                    document.body.classList.remove('sidebar-toggled');
                }
            });

            // Apply breathing class initially...
            if(localStorage.getItem('animationPref') !== 'off') {
                document.body.classList.add('breathing-bg');
            }

                const truck = document.getElementById('clickableHub');
            if(truck) {
                let isDragging = false;
                let startX, startY, initialLeft, initialTop;

                // Mouse drag handlers
                truck.addEventListener('mousedown', (e) => {
                    isDragging = true;
                    startX = e.clientX;
                    startY = e.clientY;

                    const rect = truck.getBoundingClientRect();
                    initialLeft = rect.left;
                    initialTop = rect.top;

                    truck.style.bottom = 'auto';
                    truck.style.right = 'auto';
                    truck.style.left = initialLeft + 'px';
                    truck.style.top = initialTop + 'px';
                    truck.style.cursor = 'grabbing';
                    truck.setAttribute('aria-pressed', 'true');
                });

                document.addEventListener('mousemove', (e) => {
                    if (!isDragging) return;
                    e.preventDefault();
                    const dx = e.clientX - startX;
                    const dy = e.clientY - startY;
                    truck.style.left = (initialLeft + dx) + 'px';
                    truck.style.top = (initialTop + dy) + 'px';
                });

                document.addEventListener('mouseup', () => {
                    if(isDragging) {
                        isDragging = false;
                        truck.style.cursor = 'grab';
                        truck.setAttribute('aria-pressed', 'false');
                        truck.animate([
                            { transform: 'scale(1)' },
                            { transform: 'scale(1.2)' },
                            { transform: 'scale(1)' }
                        ], { duration: 300 });
                    }
                });

                // Keyboard navigation support
                truck.addEventListener('keydown', (e) => {
                    if (e.key === 'Enter' || e.key === ' ') {
                        e.preventDefault();
                        truck.click();
                    } else if (e.key.startsWith('Arrow')) {
                        e.preventDefault();
                        const rect = truck.getBoundingClientRect();
                        const step = 10;
                        let newLeft = rect.left;
                        let newTop = rect.top;

                        switch(e.key) {
                            case 'ArrowUp':
                                newTop = Math.max(0, rect.top - step);
                                break;
                            case 'ArrowDown':
                                newTop = Math.min(window.innerHeight - rect.height, rect.top + step);
                                break;
                            case 'ArrowLeft':
                                newLeft = Math.max(0, rect.left - step);
                                break;
                            case 'ArrowRight':
                                newLeft = Math.min(window.innerWidth - rect.width, rect.left + step);
                                break;
                        }

                        truck.style.bottom = 'auto';
                        truck.style.right = 'auto';
                        truck.style.left = newLeft + 'px';
                        truck.style.top = newTop + 'px';
                    }
                });
            }
        });

    </script>

