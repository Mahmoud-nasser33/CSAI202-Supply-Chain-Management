<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Supply Chain System</title>
    
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <div class="main-wrapper">
        
        <aside class="sidebar">
            <div class="brand-name">Silsila Supply</div>
            <nav>
                <a href="/">Home</a>
                <a href="/Products">Products</a>
                <a href="/Customers">Customers</a>
                <a href="/Orders">Orders</a>
                <a href="/Inventory">Inventory</a>
            </nav>

            <div class="sidebar-team">
                <h3>The Team</h3>
                <div class="team-member">
                    <img src="/images/dev_profile_2.jpg" alt="Mahmoud Sakr">
                    <div>
                        <span class="name">Mahmoud Sakr</span>
                    </div>
                </div>
                <div class="team-member">
                    <img src="/images/dev_profile_1.jpg" alt="Mohamed Tamer">
                    <div>
                        <span class="name">Mohamed Tamer</span>
                    </div>
                </div>
                <div class="team-member">
                    <img src="/images/anon_dev_profile.svg" alt="Ahmed Noman" style="background:#fff; padding:2px;">
                    <div>
                        <span class="name">Ahmed Noman</span>
                    </div>
                </div>
            </div>
            
            <div class="sidebar-footer">
                Classical Student Project v2.5
            </div>
        </aside>

      
        <main class="content-container">
            @RenderBody()
            
            <hr />
            <footer class="app-footer">
                <p>&copy; 2024 - Advanced Classical Supply Chain Management</p>
            </footer>
        </main>
    </div>

</body>
</html>
