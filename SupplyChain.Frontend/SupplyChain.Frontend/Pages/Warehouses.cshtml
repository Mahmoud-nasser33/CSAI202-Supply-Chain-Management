@page
@model SupplyChain.Frontend.Pages.WarehousesModel
@{
    ViewData["Title"] = "Logistics Network";
}

<div class="container-bento py-4">
    <div class="d-flex justify-content-between align-items-center mb-4 animate-enter">
        <div>
            <h2 class="fw-bold mb-0">Logistics Network</h2>
            <p class="text-muted mb-0">Global distribution nodes and hubs</p>
        </div>
        <div>
            <a href="/CreateWarehouse" class="btn btn-dark btn-lg shadow-sm">
                <i class="bi bi-building-plus me-2"></i> Add Facility
            </a>
        </div>
    </div>

    <div class="bento-grid mb-5">

        <div class="card border-0 shadow-sm glass-panel bg-gradient-dark text-white span-col-2 animate-enter delay-1" style="background: linear-gradient(rgba(51, 65, 85, 0.85), rgba(15, 23, 42, 0.95)), url('/images/modern-warehouse.png') center/cover !important;">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="icon-container-circle bg-white bg-opacity-10">
                        <i class="bi bi-hdd-network-fill fs-4 text-white"></i>
                    </div>
                    <span class="badge bg-success bg-opacity-25 text-success">Optimal</span>
                </div>
                <h2 class="display-4 fw-bold mb-0">@Model.Warehouses.Count</h2>
                <small class="text-white text-opacity-75">Active Distribution Centers</small>
            </div>
        </div>

        <div class="card border-0 shadow-sm glass-panel animate-enter delay-2 text-center">
            <div class="card-body d-flex flex-column justify-content-center">
                <i class="bi bi-geo-fill fs-1 text-danger mb-2"></i>
                <h5 class="fw-bold mb-0">@Model.Warehouses.Select(w => w.Location).Distinct().Count()</h5>
                <small class="text-muted">Unique Regions</small>
            </div>
        </div>

        <div class="card border-0 shadow-sm glass-panel animate-enter delay-3 text-center">
            <div class="card-body d-flex flex-column justify-content-center">
                <i class="bi bi-speedometer fs-1 text-primary mb-2"></i>
                <h5 class="fw-bold mb-0">98%</h5>
                <small class="text-muted">Storage Efficiency</small>
            </div>
        </div>
    </div>

    <div class="bento-grid">
        @foreach (var wh in Model.Warehouses)
        {
            <div class="card border-0 shadow-sm glass-panel h-100 animate-enter delay-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div class="icon-container-circle bg-light text-dark">
                            <i class="bi bi-building"></i>
                        </div>
                        <div class="dropdown">
                            <button class="btn btn-sm btn-light rounded-circle shadow-sm" type="button" data-bs-toggle="dropdown">
                                <i class="bi bi-three-dots-vertical"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end border-0 shadow animate-fade-in">
                                <li><a class="dropdown-item" asp-page="/EditWarehouse" asp-route-id="@wh.WarehouseID"><i class="bi bi-gear me-2 text-muted"></i> Configure Hub</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@wh.WarehouseID">
                                        <button type="submit" class="dropdown-item text-danger"><i class="bi bi-trash me-2"></i> Decommission</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <h5 class="fw-bold text-dark mb-1">@wh.Name</h5>
                    <p class="text-muted small mb-0"><i class="bi bi-geo-alt text-danger me-1"></i> @wh.Location</p>

                    <div class="mt-4 pt-4 border-top">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <small class="text-muted">Inventory Utilization</small>
                            <small class="fw-bold">@Random.Shared.Next(65, 95)%</small>
                        </div>
                        <div class="progress rounded-pill shadow-sm" style="height: 6px;">
                            <div class="progress-bar bg-primary" style="width: 82%;"></div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
