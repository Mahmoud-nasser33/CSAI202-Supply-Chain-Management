@page
@model SupplyChain.Frontend.Pages.FeedbackModel
@{
    ViewData["Title"] = "Customer Feedback";
}

<div class="container-bento py-4">
    <div class="d-flex justify-content-between align-items-center mb-4 animate-enter">
        <div>
            <h2 class="fw-bold mb-0">Customer Sentiment</h2>
            <p class="text-muted mb-0">Reviews and ratings analysis</p>
        </div>
        <div>
             <button class="btn btn-secondary shadow-sm">
                 <i class="bi bi-download me-2"></i> Export Data
             </button>
        </div>
    </div>

    <div class="bento-grid mb-5">

        <div class="card border-0 shadow-sm glass-panel bg-gradient-orange text-white span-col-2 animate-enter delay-1" style="background: linear-gradient(135deg, #f97316 0%, #ea580c 100%) !important;">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="bg-white bg-opacity-25 rounded-circle p-2">
                        <i class="bi bi-emoji-smile fs-4"></i>
                    </div>
                     <span class="badge bg-white bg-opacity-25 border border-white border-opacity-25">NPS</span>
                </div>
                <h2 class="display-4 fw-bold mb-0">72</h2>
                <small class="text-white text-opacity-75">Net Promoter Score (Excellent)</small>
            </div>
        </div>

        <div class="card border-0 shadow-sm glass-panel animate-enter delay-2">
             <div class="card-body">
                 <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="bg-primary bg-opacity-10 text-primary rounded-circle p-2">
                        <i class="bi bi-chat-left-text fs-4"></i>
                    </div>
                     <span class="text-primary small fw-bold">Volume</span>
                </div>
                <h2 class="fw-bold mb-0 text-dark">850</h2>
                <small class="text-muted">Reviews this month</small>
            </div>
        </div>

        <div class="card border-0 shadow-sm glass-panel animate-enter delay-3">
             <div class="card-body">
                 <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="bg-warning bg-opacity-10 text-warning rounded-circle p-2">
                        <i class="bi bi-star-fill fs-4"></i>
                    </div>
                     <span class="text-warning small fw-bold">Quality</span>
                </div>
                <h2 class="fw-bold mb-0 text-dark">4.8/5</h2>
                <small class="text-muted">Average customer rating</small>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 glass-panel animate-enter delay-4 span-col-4">
        <div class="card-body p-0">
             <div class="d-flex justify-content-between align-items-center p-3 border-bottom">
                 <h5 class="fw-bold mb-0">Latest Feedback</h5>
                 <div class="btn-group">
                     <button class="btn btn-outline-secondary btn-sm active">All</button>
                     <button class="btn btn-outline-secondary btn-sm">Negative</button>
                     <button class="btn btn-outline-secondary btn-sm">Positive</button>
                 </div>
             </div>

            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 py-3">ID</th>
                            <th class="py-3">Order</th>
                            <th class="py-3">Customer</th>
                            <th class="py-3">Rating</th>
                            <th class="py-3">Comment</th>
                            <th class="py-3">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.FeedbackList)
                        {
                            <tr>
                                <td class="ps-4 text-muted">#@item.FeedbackID</td>
                                <td><a asp-page="/Orders" class="text-primary fw-bold text-decoration-none">#@item.OrderID</a></td>
                                <td class="fw-bold">@item.CustomerName</td>
                                <td>
                                    @for (int i = 0; i < 5; i++)
                                    {
                                        if (i < item.Rating)
                                        {
                                            <i class="bi bi-star-fill text-warning"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-star text-muted opacity-25"></i>
                                        }
                                    }
                                </td>
                                <td class="text-muted"><i class="bi bi-quote me-1 opacity-50"></i>@item.Comment</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-danger rounded-pill px-3">Resolve</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
