@page
@model SupplyChain.Frontend.Pages.UsersModel
@{
    ViewData["Title"] = "User Management";
}

<div class="container-bento py-4">
    <div class="d-flex justify-content-between align-items-center mb-4 animate-enter">
        <div>
            <h2 class="fw-bold mb-0">System Users</h2>
            <p class="text-muted mb-0">Access control & permissions</p>
        </div>
        <div>
            <a href="/CreateUser" class="btn btn-primary btn-lg shadow-sm">
                <i class="bi bi-person-plus-fill me-2"></i> Add System User
            </a>
        </div>
    </div>

    <!-- User List Widget -->
    <div class="card shadow-sm border-0 glass-panel animate-enter delay-1 span-col-4">
        <div class="card-body p-0">
             <div class="d-flex justify-content-between align-items-center p-3 border-bottom">
                 <h5 class="fw-bold mb-0">Registered Users</h5>
                 <div class="d-flex gap-2">
                     <span class="badge bg-light text-dark border">Total: @Model.UserList.Count</span>
                 </div>
             </div>
        
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 py-3">ID</th>
                            <th class="py-3">User</th>
                            <th class="py-3">Email</th>
                            <th class="py-3">Role</th>
                            <th class="py-3">Status</th>
                            <th class="py-3">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.UserList)
                        {
                            <tr>
                                <td class="ps-4 text-muted">#@item.UserID</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-gradient-light rounded-circle d-flex align-items-center justify-content-center me-2 shadow-sm fw-bold border" style="width: 32px; height: 32px;">
                                            @item.Username.Substring(0,1).ToUpper()
                                        </div>
                                        <span class="fw-bold">@item.Username</span>
                                    </div>
                                </td>
                                <td>@item.Email</td>
                                <td>
                                    @if (item.Role == "Administrator")
                                    {
                                        <span class="badge bg-danger-subtle text-danger border border-danger-subtle rounded-pill px-3">Admin</span>
                                    }
                                    else if (item.Role == "Manager")
                                    {
                                        <span class="badge bg-warning-subtle text-warning-emphasis border border-warning-subtle rounded-pill px-3">Manager</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info-subtle text-info-emphasis border border-info-subtle rounded-pill px-3">Staff</span>
                                    }
                                </td>
                                <td><span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill px-2">Active</span></td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <button class="btn btn-sm btn-outline-primary rounded-circle"><i class="bi bi-pencil"></i></button>
                                        <form method="post" asp-page-handler="Delete" asp-route-id="@item.UserID" onsubmit="return confirm('Deactivate this user?');">
                                            <button type="submit" class="btn btn-sm btn-outline-danger rounded-circle"><i class="bi bi-person-x"></i></button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
