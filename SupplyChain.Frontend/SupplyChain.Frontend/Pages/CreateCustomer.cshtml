@page
@model SupplyChain.Frontend.Pages.CreateCustomerModel
@{
    ViewData["Title"] = "Add Customer";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-lg glass-panel animate-enter">
                <div class="card-header bg-success bg-gradient text-white py-3 border-0">
                    <h3 class="card-title mb-0 fw-bold"><i class="bi bi-person-plus-fill me-2"></i> Register New Customer</h3>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <div class="mb-4">
                            <label class="form-label fw-bold"><i class="bi bi-person-badge me-1 text-primary"></i> Full Name</label>
                            <input asp-for="Customer.Name" class="form-control form-control-lg border-2 shadow-sm" placeholder="e.g. Acme Corp or John Doe" required />
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold"><i class="bi bi-envelope-at me-1 text-info"></i> Email Address</label>
                            <input asp-for="Customer.Email" type="email" class="form-control border-2 shadow-sm" placeholder="contact@domain.com" required />
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold"><i class="bi bi-telephone-fill me-1 text-primary"></i> Phone Number</label>
                            <input asp-for="Customer.Phone" type="tel" class="form-control border-2 shadow-sm" placeholder="e.g. +20 123 456 7890" required />
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6 text-dark font-weight-bold">
                                <label class="form-label fw-bold text-dark"><i class="bi bi-building-fill me-1 text-warning"></i> City</label>
                                <input asp-for="Customer.City" class="form-control border-2 shadow-sm" placeholder="e.g. Dubai" required />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold text-dark"><i class="bi bi-globe me-1 text-success"></i> Country</label>
                                <input asp-for="Customer.Country" class="form-control border-2 shadow-sm" placeholder="e.g. UAE" required />
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold"><i class="bi bi-geo-alt-fill me-1 text-danger"></i> Business/Shipping Address</label>
                            <textarea asp-for="Customer.Address" class="form-control border-2 shadow-sm" rows="3" placeholder="Full street address details..." required></textarea>
                        </div>

                        <div class="d-flex gap-3 mt-5">
                            <button type="submit" class="btn btn-success btn-lg px-5 shadow">
                                <i class="bi bi-plus-circle me-2"></i> Create Customer
                            </button>
                            <a href="/Customers" class="btn btn-light btn-lg border px-4">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
