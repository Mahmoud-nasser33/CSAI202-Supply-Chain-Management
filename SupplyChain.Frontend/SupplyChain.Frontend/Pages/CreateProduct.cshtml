@page
@model SupplyChain.Frontend.Pages.CreateProductModel
@{
    ViewData["Title"] = "Register Inventory Item";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h3 class="card-title mb-0">✨ Add New Product</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label">Product Name</label>
                            <input asp-for="Product.Name" class="form-control" placeholder="e.g. Dell Laptop" required />
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Price ($)</label>
                                <input asp-for="Product.Price" type="number" step="0.01" class="form-control" placeholder="0.00" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Stock Quantity</label>
                                <input asp-for="Product.StockQuantity" type="number" class="form-control" placeholder="0" required />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Category</label>
                            <select asp-for="Product.CategoryID" class="form-select" required>
                                <option value="">-- Select Category --</option>
                                @foreach (var cat in Model.Categories)
                                {
                                    <option value="@cat.CategoryID">@cat.Name</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Supplier</label>
                            <select asp-for="Product.SupplierID" class="form-select" required>
                                <option value="">-- Select Supplier --</option>
                                @foreach (var sup in Model.Suppliers)
                                {
                                    <option value="@sup.Id">@sup.Name</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Description</label>
                            <textarea asp-for="Product.Description" class="form-control" rows="3" placeholder="Product details..."></textarea>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">Save Product</button>
                            <a href="/Products" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>