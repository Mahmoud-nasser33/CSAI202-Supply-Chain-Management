@page
@model SupplyChain.Frontend.Pages.CreateProductModel
@{
    ViewData["Title"] = "Add Product";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h3 class="card-title mb-0">✨ Add New Product</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label">Product Name</label>
                            <input asp-for="Product.Name" class="form-control" placeholder="e.g. Dell Laptop" required />
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Price ($)</label>
                                <input asp-for="Product.Price" type="number" step="0.01" class="form-control" placeholder="0.00" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Stock Quantity</label>
                                <input asp-for="Product.StockQuantity" type="number" class="form-control" placeholder="0" required />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Category</label>
                            <select asp-for="Product.Category" class="form-select" required>
                                <option value="">-- Select Category --</option>
                                <option>Electronics</option>
                                <option>Furniture</option>
                                <option>Industrial</option>
                                <option>Raw Materials</option>
                                <option>Automotive</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Product SKU (Internal)</label>
                            <input asp-for="Product.SKU" class="form-control" placeholder="e.g. LAP-001" required />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">Save Product</button>
                            <a href="/Products" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>