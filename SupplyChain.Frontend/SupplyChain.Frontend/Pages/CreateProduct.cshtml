@page
@model SupplyChain.Frontend.Pages.CreateProductModel
@{
    ViewData["Title"] = "Add Product";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h3 class="card-title mb-0">✨ Add New Product</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label">Product Name</label>
                            <input asp-for="Product.Name" class="form-control" placeholder="e.g. Dell Laptop" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Price ($)</label>
                            <input asp-for="Product.Price" type="number" class="form-control" placeholder="0.00" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Stock Quantity</label>
                            <input asp-for="Product.StockQuantity" type="number" class="form-control" placeholder="0" required />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">Save Product</button>
                            <a href="/Products" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>