@page
@model SupplyChain.Frontend.Pages.UserDashboardModel
@{
    ViewData["Title"] = "My Dashboard";
}

<div class="container-bento">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6 fw-bold mb-1">Operational Execution Control Center</h1>
            <p class="text-muted">Manage stock, fulfill orders, and monitor warehouse tasks</p>
        </div>
        <div>
            <span class="badge bg-primary px-3 py-2">Warehouse Staff</span>
        </div>
    </div>

    <div class="bento-grid mb-4">

        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div>
                        <p class="text-muted mb-1 small fw-bold">MY TASKS TODAY</p>
                        <h2 class="display-4 fw-bold text-primary mb-0">12</h2>
                    </div>
                    <div class="rounded-circle bg-primary bg-opacity-10 p-3">
                        <i class="bi bi-list-check text-primary" style="font-size: 1.5rem;"></i>
                    </div>
                </div>
                <div class="d-flex align-items-center gap-2">
                    <span class="badge bg-success-subtle text-success">3 Urgent</span>
                    <small class="text-muted">9 Normal</small>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div>
                        <p class="text-muted mb-1 small fw-bold">ORDERS TO PROCESS</p>
                        <h2 class="display-4 fw-bold text-info mb-0">8</h2>
                    </div>
                    <div class="rounded-circle bg-info bg-opacity-10 p-3">
                        <i class="bi bi-cart-fill text-info" style="font-size: 1.5rem;"></i>
                    </div>
                </div>
                <div class="progress" style="height: 8px;">
                    <div class="progress-bar bg-info" style="width: 65%"></div>
                </div>
                <small class="text-muted mt-2 d-block">5 of 8 completed</small>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div>
                        <p class="text-muted mb-1 small fw-bold">LOW STOCK ALERTS</p>
                        <h2 class="display-4 fw-bold text-warning mb-0">5</h2>
                    </div>
                    <div class="rounded-circle bg-warning bg-opacity-10 p-3">
                        <i class="bi bi-exclamation-triangle-fill text-warning" style="font-size: 1.5rem;"></i>
                    </div>
                </div>
                <small class="text-muted">Requires immediate attention</small>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div>
                        <p class="text-muted mb-1 small fw-bold">TODAY'S SHIPMENTS</p>
                        <h2 class="display-4 fw-bold text-success mb-0">15</h2>
                    </div>
                    <div class="rounded-circle bg-success bg-opacity-10 p-3">
                        <i class="bi bi-truck text-success" style="font-size: 1.5rem;"></i>
                    </div>
                </div>
                <small class="text-muted">12 Dispatched, 3 Pending</small>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-lightning-charge-fill text-warning"></i> Quick Actions</h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-3">
                    <button class="btn btn-outline-primary w-100 py-3">
                        <i class="bi bi-upc-scan d-block mb-2" style="font-size: 2rem;"></i>
                        Scan Item
                    </button>
                </div>
                <div class="col-md-3">
                    <button class="btn btn-outline-success w-100 py-3">
                        <i class="bi bi-box-arrow-in-down d-block mb-2" style="font-size: 2rem;"></i>
                        Update Stock
                    </button>
                </div>
                <div class="col-md-3">
                    <button class="btn btn-outline-info w-100 py-3">
                        <i class="bi bi-check-circle d-block mb-2" style="font-size: 2rem;"></i>
                        Mark Complete
                    </button>
                </div>
                <div class="col-md-3">
                    <button class="btn btn-outline-warning w-100 py-3">
                        <i class="bi bi-printer d-block mb-2" style="font-size: 2rem;"></i>
                        Print Labels
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-list-task"></i> My Assigned Tasks</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Task</th>
                            <th>Order ID</th>
                            <th>Priority</th>
                            <th>Due Time</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Pick items for order</td>
                            <td>#ORD-1234</td>
                            <td><span class="badge bg-danger">Urgent</span></td>
                            <td>10:00 AM</td>
                            <td><span class="badge bg-warning">In Progress</span></td>
                            <td><button class="btn btn-sm btn-primary">Complete</button></td>
                        </tr>
                        <tr>
                            <td>Pack shipment</td>
                            <td>#ORD-1235</td>
                            <td><span class="badge bg-danger">Urgent</span></td>
                            <td>11:30 AM</td>
                            <td><span class="badge bg-info">Pending</span></td>
                            <td><button class="btn btn-sm btn-outline-primary">Start</button></td>
                        </tr>
                        <tr>
                            <td>Stock replenishment</td>
                            <td>-</td>
                            <td><span class="badge bg-secondary">Normal</span></td>
                            <td>2:00 PM</td>
                            <td><span class="badge bg-info">Pending</span></td>
                            <td><button class="btn btn-sm btn-outline-primary">Start</button></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    // Protect this page - require authentication
    if (!sessionManager.isLoggedIn() || !sessionManager.hasRole('user')) {
        window.location.href = '/Login';
    }
</script>
