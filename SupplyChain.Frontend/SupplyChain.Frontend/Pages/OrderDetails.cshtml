@page "{id:int}"
@model SupplyChain.Frontend.Pages.OrderDetailsModel
@{
    ViewData["Title"] = "Order Technical Specifications";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card border-0 shadow-lg glass-panel animate-enter">
                <div class="card-header bg-dark text-white py-3 border-0 d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0 fw-bold"><i class="bi bi-receipt me-2"></i> Order #@Model.Order.OrderID</h3>
                    <span class="badge @(Model.Order.Status == "Cancelled" ? "bg-danger" : "bg-success") px-3 py-2 text-uppercase fw-bold shadow-sm">
                        @Model.Order.Status
                    </span>
                </div>
                <div class="card-body p-4">

                    <div class="row mb-5">
                        <div class="col-md-4">
                            <h6 class="text-muted text-uppercase small fw-bold mb-2">Customer</h6>
                            <h5 class="fw-bold mb-0 text-dark">@Model.Order.CustomerName</h5>
                            <small class="text-muted">ID: #@Model.Order.CustomerID</small>
                        </div>
                        <div class="col-md-4">
                            <h6 class="text-muted text-uppercase small fw-bold mb-2">Order Date</h6>
                            <h5 class="fw-bold mb-0 text-dark">@Model.Order.OrderDate.ToString("MMM dd, yyyy HH:mm")</h5>
                        </div>
                        <div class="col-md-4 text-md-end">
                            <h6 class="text-muted text-uppercase small fw-bold mb-2">Total Amount</h6>
                            <h3 class="fw-bold mb-0 text-primary">@Model.Order.TotalAmount?.ToString("C")</h3>
                        </div>
                    </div>

                    <hr class="mb-5 border-light" />

                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4 py-3">Catalog Item</th>
                                    <th class="py-3 text-center">Quantity</th>
                                    <th class="py-3 text-end">Unit Price</th>
                                    <th class="py-3 text-end pe-4">Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Details)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="fw-bold text-dark">@item.ProductName</div>
                                            <small class="text-muted">ID: #@item.ProductID</small>
                                        </td>
                                        <td class="text-center fw-bold">@item.Quantity</td>
                                        <td class="text-end">@item.UnitPrice.ToString("C")</td>
                                        <td class="text-end pe-4 fw-bold">@((item.Quantity * item.UnitPrice).ToString("C"))</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="d-flex justify-content-between mt-5">
                        <a href="/Orders" class="btn btn-light btn-lg border px-4">
                            <i class="bi bi-arrow-left me-2"></i> Back to Orders
                        </a>
                        <div class="d-flex gap-2">
                             @if(Model.Order.Status != "Cancelled" && Model.Order.Status != "Delivered")
                             {
                                <form method="post" asp-page="Orders" asp-page-handler="Delete" asp-route-id="@Model.Order.OrderID">
                                    <button type="submit" class="btn btn-outline-danger btn-lg px-4">
                                        Cancel Order
                                    </button>
                                </form>
                             }
                             <button class="btn btn-primary btn-lg px-5 shadow">
                                <i class="bi bi-printer me-2"></i> Print Invoice
                             </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
